[Unit]
Description=kafka_zookeeper

[Service]
PIDFile=/run/appserver/appserver-kafka_zookeeper.pid
Type=simple
user=root
WorkingDirectory=/root/kafka_2.12-2.5.0/
ExecStart=/root/kafka_2.12-2.5.0/bin/zookeeper-server-start.sh /root/kafka_2.12-2.5.0/config/zookeeper.properties
TimeoutSec=300
Restart=always

[Install]
WantedBy=multi-user.target